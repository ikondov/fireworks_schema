{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/ForeachTask",
  "ForeachTask": {
    "properties": {
      "_fw_name": {
        "const": "ForeachTask"
      },
      "task": {
        "$ref": "firetask.json#/Firetask"
      },
      "split": {
        "type": "string"
      },
      "number of chunks": {
        "type": "integer",
        "minimum": 1
      }
    },
    "required": [
      "_fw_name",
      "task",
      "split"
    ]
  }
}